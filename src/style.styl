body
  margin: 2rem;
  font-family: 'Open Sans', sans-serif;
  background: white;
  font-size: 18px;
  line-height: 28px;
  color: #343434

h1, h2, h3
  margin-bottom: 0;

h1
  margin-top: 3em;
  font-size: 40px;
  line-height: 43px;

h2
  margin-top: 44px;
  font-size: 30px;
  margin-bottom: 18px;

h3
  margin-top: 27px;
  margin-bottom: 15px;
p
  margin-top: 0;
  margin-bottom: 14px

article
  max-width: 650px;
  margin-left: 4vw;

header
  h1
    margin-bottom: 0;
  
.subtitle
  font-size: 18px;
  line-height: 27px;


ul
  padding-left: 0;
  list-style-type: square;
li
  margin-top: 1.6em;

.techs
  margin-top: 8px;
  margin-bottom: 33px
  li
    display: inline-block;
    margin: 2px;
    margin-top: 12px
    background: black;
    color: white;
    padding: 0 8px;
    font-size: 14px;
.dimm
  font-weight: bold;

.contacts
  li
    margin-top: 0;

footer
  margin-bottom: 5em

.tldr li
  margin-top: 1em
  list-style: none
  position relative
  &:before
    position: absolute;
    left: -1em;
    width: 4px;
    height: 4px;
    content: '';
    background-color: #c9c9c9;
    top: 0.7em

.step > div
  margin-top: 0.5em
  white-space: pre-line;
