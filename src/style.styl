  font-family: 'Share Tech Mono', monospace;
  background: white;
  font-size: 18px;
  line-height: 1.6;

h1
  font-size: 2em;

h1, h2, h3
  margin-top: 3em;
  margin-bottom: 0;
  
article
  max-width: 650px;
  margin-left: 4vw;

header
  h1
    margin-bottom: 0;
  
.subtitle
  font-size: 18px;

